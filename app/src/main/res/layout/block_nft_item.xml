<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="nft"
            type="com.example.cryptocurrency.domain.model.BlockSpanResult" />
        <variable
            name="stat"
            type="com.example.cryptocurrency.domain.model.BlockSpanStats" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="184dp"
        android:layout_height="260dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/dark_grey"
        app:cardElevation="40dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/black_glass"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{nft.name}"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:maxLines="3"
                    android:layout_gravity="center"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="250dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center"
                    app:cardElevation="40dp">
                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <ImageView
                android:id="@+id/featurePhoto"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="150dp"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:letterSpacing="0.02"
                        android:padding="2dp"
                        android:fontFamily="@font/josefin_sans_regular"
                        android:text="@string/total_supply"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/ethPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:formatString="@{stat.totalSupply}"
                        android:textSize="14sp"
                        android:fontFamily="@font/josefin_sans_regular"
                        android:padding="2dp"
                        android:layout_marginHorizontal="8dp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_volume"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/josefin_sans_regular"
                        android:padding="2dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="end"
                        android:letterSpacing="0.02"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:formatDouble="@{stat.totalVolume}"
                        android:fontFamily="@font/josefin_sans_regular"
                        android:textSize="14sp"
                        android:layout_gravity="end"
                        android:padding="2dp"
                        android:layout_marginEnd="8dp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>