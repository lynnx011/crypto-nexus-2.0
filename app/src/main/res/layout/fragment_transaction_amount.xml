<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.TransactionAmountFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.cryptocurrency.view_model.PortfolioViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backKey"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/left_arrow"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/titleRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="10dp"
                    android:outlineSpotShadowColor="@color/dark_grey"
                    app:cardCornerRadius="250dp"
                    app:cardElevation="20dp">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:letterSpacing="0.03"
                    android:text=""
                    android:textColor="@color/grey4"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:letterSpacing="0.02"
                    android:text=""
                    android:textColor="@color/grey4"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null"
                        android:fontFamily="@font/josefin_sans_regular"
                        android:hint="0"
                        android:digits="0123456789."
                        android:text="@={viewModel.convertAmount}"
                        android:inputType="number"
                        android:textColor="@color/light_grey"
                        android:textColorHint="@color/grey4"
                        android:textSize="54sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/symbol1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/josefin_sans_regular"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textColor="@color/grey4"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:id="@+id/perCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:letterSpacing="0.06"
                    android:text=""
                    android:textColor="@color/grey4"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/equal"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/josefin_sans_regular"
                        android:letterSpacing="0.06"
                        android:text="@{viewModel.convertResult}"
                        android:textColor="@color/grey5"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/dollar_symbol"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/transBtn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:layout_marginVertical="30dp"
                    android:backgroundTint="@color/tangerine1"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:letterSpacing="0.02"
                    android:text="@string/add_trans"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:enabled="@{viewModel.isTransBtnValid}"
                    android:textStyle="bold"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>