<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="news"
            type="com.example.cryptocurrency.model.model5.Article" />
    </data>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardElevation="60dp"
    android:layout_marginBottom="14dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nft"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black_glass"
            tools:ignore="UselessLeaf" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{news.source.name}"
                android:textSize="16sp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/josefin_sans_regular"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:textColor="@color/tangerine"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{news.title}"
                android:textSize="18sp"
                android:fontFamily="@font/josefin_sans_regular"
                android:layout_marginVertical="10dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:maxLines="3"
                android:textColor="@color/white"
                android:letterSpacing="0.04"/>

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{news.author}"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/tangerine"
                    android:letterSpacing="0.04"/>
                <TextView
                    android:id="@+id/publishedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:parseDate="@{news.publishedAt}"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/josefin_sans_regular"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:letterSpacing="0.04"/>
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
</layout>